generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model asesores {
  id                      Int           @id @default(autoincrement())
  nombre                  String
  email                   String?       @unique
  cedula                  String?
  estado                  String        @default("activo")
  rol                     String        @default("asesor")
  fecha_registro          DateTime      @default(now()) @db.Timestamptz(6)
  formularios_completados Int           @default(0)
  eficiencia              Int           @default(0)
  formularios_permitidos  Json          @default("[]")
  created_at              DateTime      @default(now()) @db.Timestamptz(6)
  updated_at              DateTime      @default(now()) @db.Timestamptz(6)
  user_id                 String?
  image                   String?
  ultimo_acceso           DateTime?     @db.Timestamptz(6)
  formularios             formularios[]
}

model formularios {
  id            Int       @id @default(autoincrement())
  tipo          String
  asesor_id     Int?
  asesor_nombre String?
  datos         Json?
  created_at    DateTime  @default(now()) @db.Timestamptz(6)
  asesores      asesores? @relation(fields: [asesor_id], references: [id], onUpdate: NoAction)

  @@index([asesor_id], map: "idx_formularios_asesor_id")
  @@index([created_at], map: "idx_formularios_created_at")
}

enum Role {
  admin
  asesor
  owner
}
